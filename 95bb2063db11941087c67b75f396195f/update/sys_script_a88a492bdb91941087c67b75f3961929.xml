        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	//Denna Business rule räknar alla kopplade assets till en hårdvarumodell som har status "In Stock - Available" och rapporterar ett lagersaldo till hårdvarumodellen.


	var product = current.model; // hämtar current model på asseten

	var ga = new GlideAggregate('alm_asset');
	ga.addQuery('model', product);
	ga.addQuery('install_status', 6);
	ga.addQuery('substatus', 'available');
	ga.addAggregate('COUNT');
	ga.query();

	var inStock;

	while (ga.next()) {
		inStock = ga.getAggregate('COUNT');
	}

	var gr = new GlideRecord('cmdb_hardware_product_model');

	if (gr.get(product)) {
		gr.setValue('x_hak_price_calc_in_stock', inStock);
		gr.update();
	}


})(current, previous);]]></script>
